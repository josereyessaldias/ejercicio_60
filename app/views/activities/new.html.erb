<h2>Crear nueva actividad </h2>
<br>

<% if user_signed_in? %>
	<%= form_with model: @activity, url: activities_path, method: :post, local: true do |f| %>
		
		<%= f.label :name %>
		<%= f.text_field :name %>	<br>

		<%= f.label :categoría %>
		<%= f.collection_select :category_id, @categories, :id, :name, :prompt => true %><br>

	    <%= f.label :photo %> <br>
	    <%= f.file_field :photo %>
	    <%= f.text_field :remote_photo_url %><br>

	    <br>
	    <i>Si la actividad es Trekking, agregar la ubicación:<br>
	    (utilizando punto como separador decimal)</i><br>
	    <%= f.label :latitude %>
		<%= f.text_field :latitude %>	<br>

		<%= f.label :longitude %>
		<%= f.text_field :longitude %>	<br>

		<%= f.submit "Enviar" %>

	<% end %>
<% end %>